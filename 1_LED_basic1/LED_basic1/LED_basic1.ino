
void setup()             
{
  pinMode(2, OUTPUT);    //กำหนดให้ขาพอร์ตที่ 2 เป็น OUTPUT
}
void loop()
{
  digitalWrite(2,HIGH);  //สั่งให้ขาพอร์ตที่ 2 มีสถานะเป็น HIGH
  delay(1000);           //หน่วงเวลา 1000 มิลลิวินาที หรือ 1 วินาที
  digitalWrite(2,LOW);   //สั่งให้ขาพอร์ตที่ 2 มีสถานะเป็น LOW
  delay(1000);           //หน่วงเวลา 1000 มิลลิวินาที หรือ 1 วินาที
}
